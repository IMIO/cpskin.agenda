<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea">

<body>
  <metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">
      <div tal:define="
        self nocall:context/@@faceted-events-preview-items;
        folderContents folderContents | python:context.getFolderContents();
        results python:self.organize(folderContents);
        days python: sorted(results.keys());
        Batch python:modules['Products.CMFPlone'].Batch;
        b_start python:request.get('b_start', 0);
        batch python: Batch(days, self.perPage(), int(b_start));">

        <div metal:use-macro="context/batch_macros/macros/navigation" />

        <div class="eea-preview-items">
          <tal:entries repeat="day batch">
            <div class="day"
                 tal:define="singledays python: results[day]['single'];
                             multidays python: results[day]['multi'];">
                <span tal:replace="python:day.strftime('%d/%m/%Y')" />
                <div class="single-days" tal:condition="singledays">
                    <tal:entries repeat="brain singledays">
                        <tal:entry
                          define="doc brain/getObject|nothing"
                          replace="structure python:self.render_event_preview(doc)" />
                    </tal:entries>
                </div>
                <div class="multi-days" tal:condition="multidays">
                    <tal:entries repeat="brain multidays">
                        <tal:entry
                          define="doc brain/getObject|nothing"
                          replace="structure python:self.render_event_preview(doc)" />
                    </tal:entries>
                </div>
            </div>
          </tal:entries>
        </div>

        <div metal:use-macro="context/batch_macros/macros/navigation" />

      </div>

    </metal:block>
  </metal:content-core>
</body>
</html>
